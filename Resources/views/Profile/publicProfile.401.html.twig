{% extends "ClarolineCoreBundle::layout.html.twig" %}

{% block title %}{{ 'public_profile_undiscoverable_anonymously'|trans({}, 'platform') }}{% endblock %}

{% block content %}
    <div class="panel panel-default panel-user">
        <div class="panel-heading relative">
            {% if app.user and app.user.getId() == user.Id %}
                <a href="{{ path('claro_profile_view') }}" class="black_link slrn-top-back-link">
                    <i class="icon-chevron-left no_underline"> </i>{{ 'back_to_profile'|trans({}, 'platform') }}
                </a>
            {% endif %}
            <h1 class="slrn-content-main-title slrn-content-main-title--profile">
                {{ 'public_profile_undiscoverable_anonymously'|trans({}, 'platform') }}
            </h1>
        </div>
        <div class="panel-body">
            <p>
                {{ 'public_profile_undiscoverable_anonymously_text'|trans({'%loginUrl%': path('claro_security_login'), '%publicUrl%': publicUrl}, 'platform') | raw }}.<br>
            </p>
        </div>
    </div>
{% endblock %}