{% extends "ClarolineCoreBundle::layout.html.twig" %}

{% block title %}{{ 'my_profile'|trans({}, 'platform') ~ ' - ' ~ user.getLastName() ~ ' ' ~ user.getFirstName() | striptags | raw }}{% endblock %}

{% set canEdit = (app.user is not null and user.getId() == app.user.getId()) or is_granted('ROLE_ADMIN') %}

{% block content %}
    <!--{{ macros.flashBox() }}-->
    <div class="panel panel-default panel-user">
        <div class="panel-heading relative">
            {% if canEdit %}
                <div class="dropdown float-right-top">
                    <a data-toggle="dropdown" href="#" class="btn btn-primary">
                        {{ 'actions' | trans({}, 'platform') }} <i class="caret"></i>
                    </a>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                        <li>
                            <a href="{{ path('claro_user_profile_edit') }}">
                                {{ 'edit_profile'|trans({}, 'platform') }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('claro_user_password_edit') }}">
                                {{ 'edit_password'|trans({}, 'platform') }}
                            </a>
                        </li>
	                    <li>
	                        <a href="{{ path('claro_public_profile_view', {'publicUrl': user.publicUrl}) }}">
	                            {{ 'see_public_profile'|trans({}, 'platform') }}
	                        </a>
	                    </li>
                        {% if false == user.hasTunedPublicUrl %}
                        <li>
                            <a href="{{ path('claro_user_public_url_edit') }}">
                                {{ 'tune_your_public_profile_url'|trans({}, 'platform') }}
                            </a>
                        </li>
                        {% endif %}
                        <li>
                            <a href="{{ path('claro_user_public_profile_preferences') }}">
                                {{ 'manage_public_profile_preferences'|trans({}, 'platform') }}
                            </a>
                        </li>
                    </ul>
                </div>
            {% endif %}
            <h3 class="panel-title">
                {#{{ 'user_profile'|trans({}, 'platform') }}#}
				{{ user.getLastName() ~ ' ' ~ user.getFirstName() }}
            </h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <aside class="col-md-2 profile_aside" role="complementary">
                    <div class="avatar">
                        {% if user.getPicture() != "" %}
                            <img src="{{ asset('uploads/pictures/') ~  user.getPicture() }}" class="profile_picture">
                        {% else %}
                            <h1 class="profile_picture_placeholder"><i class="icon-user"></i></h1>
                        {% endif %}
                    </div>
                    {#<div class="informations">
                        <p class="text-center text-muted">
                            {{ 'registered'|trans({}, 'platform') }} {{ user.getCreationDate()| timeAgo }}
                        </p>
                    </div>#}
                    {#<ul class="nav nav-pills nav-stacked contact_methods">
                        <li>
                            <a href="{{path('claro_mail_form', {'userId':user.getId()})}}">
                                <i class="icon-envelope"></i> {{ 'send_mail'|trans({}, 'platform') }}
                            </a>
                        </li>
                        <li>
                            <a href="{{path('claro_message_show', {'message': 0})}}?ids[]={{ user.getId() }}">
                                <i class="icon-comment"></i> {{ 'send_message'|trans({}, 'platform') }}
                            </a>
                        </li>
                    </ul>#}
                </aside>
                <div class="col-md-6 profile_informations">
					<ul class="col-md-12">
                    	<li>{{'First name' | trans({}, 'platform') }}: {{user.getFirstName()}}</li>
                    	<li> {{'Last name' | trans({}, 'platform') }}: {{user.getLastName()}}</li>
                	</ul>
					 <div class="informations">
						 {% if '' != user.getDescription() %}
                        <div class="description_block">
                            {#<p class="lead">Description de {{ user.getLastName() ~ ' ' ~ user.getFirstName() }}</p>#}
                            <div class="description">
                                {{ user.getDescription() |raw }}
                            </div>
                        </div>
                    {% endif %}
                        <p class="text-muted">
                            {{ 'registered'|trans({}, 'platform') }} {{ user.getCreationDate()| timeAgo }}
                        </p>
                    </div>
                    {#<h2>{{ user.getLastName() ~ ' ' ~ user.getFirstName() }}</h2>
                    <p><span class="icon-envelope"> <a href="mailto:{{ user.getmail() }}" title="{{ user.getmail() }}">{{ user.getmail() }}</a></span></p>
                    {% if user.getPhone() is not null %}
                        <p><span class="icon-phone-sign"></span> {{ user.getPhone() }}</p>
                    {% endif %}#}
                   
                </div>
            </div>
        </div>
		{% if user.getId() != app.user.getId() %}
			<p>
				<a class="btn btn-default" href="{{path('claro_mail_form', {'userId':user.getId()})}}"><i class="icon-comment"></i> {{ 'send_mail'|trans({}, 'platform') }}</a>
                <a class="btn btn-default" href="{{path('claro_message_show', {'message': 0})}}?ids[]={{ user.getId() }}"><i class="icon-envelope"></i> {{ 'send_message'|trans({}, 'platform') }}</a>
			</p>
		{% endif %}
	<div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ 'badges'|trans({}, 'badge') }}</h3>
        </div>
        <div class="panel panel-body">
            {% include 'ClarolineCoreBundle:Badge/Badge:display.html.twig' with {'badgeUrl': 'claro_view_badge', 'paginationurl': 'claro_profile_view', 'routeParams': {'userId': user.id}} %}
        </div>
    </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets debug=false filter='lessphp, cssmin'  output='bundles/clarolinecore/css/badge.css'
      "@ClarolineCoreBundle/Resources/views/Badge/less/badge.less"
    %}
        <link rel="stylesheet" href="{{ asset_url }}" screen="media" />
    {% endstylesheets %}
{% endblock %}