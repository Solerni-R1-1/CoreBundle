{% extends "ClarolineCoreBundle::layout.html.twig" %}

{% block title %}{{ 'my_profile'|trans({}, 'platform') ~ ' - ' ~ user.getLastName() ~ ' ' ~ user.getFirstName() | striptags | raw }}{% endblock %}

{% block bodyClasses %}body-profile{% endblock %}

{% set canEdit = (app.user is not null and user.getId() == app.user.getId()) or is_granted('ROLE_ADMIN') %}

{% block content %}
    <!--{{ macros.flashBox() }}-->
    <div class="panel panel-default panel-user">
        <div class="slrn-row relative">
            {% if canEdit %}
                <div class="dropdown float-right-top">
                    <a data-toggle="dropdown" href="#" class="btn btn-gris slrn-profile-button" role="button">
                        {{ 'parameters' | trans({}, 'platform') }}<i class="caret"></i>
                    </a>
                    <ul class="dropdown-menu" role="menu">
                        <li role="presentation" >
                            <a role="menuitem" href="{{ path('claro_user_profile_edit') }}">
                                {{ 'edit_profile'|trans({}, 'platform') }}
                            </a>
                        </li>
                        {% if FALSE == user.isFacebookAccount %}
                        <li role="presentation" >
                            <a role="menuitem" href="{{ path('claro_user_password_edit') }}">
                                {{ 'edit_password'|trans({}, 'platform') }}
                            </a>
                        </li>
                        {% endif %}
                        <li role="presentation" >
                            <a role="menuitem" href="{{ path('claro_public_profile_view', {'publicUrl': user.publicUrl}) }}">
                                {{ 'see_public_profile'|trans({}, 'platform') }}
                            </a>
                        </li>
                        {% if false == user.hasTunedPublicUrl %}
                        <li role="presentation" >
                            <a role="menuitem" href="{{ path('claro_user_public_url_edit') }}">
                                {{ 'tune_your_public_profile_url'|trans({}, 'platform') }}
                            </a>
                        </li>
                        {% endif %}
                        <li role="presentation" >
                            <a role="menuitem" href="{{ path('claro_user_public_profile_preferences') }}">
                                {{ 'manage_public_profile_preferences'|trans({}, 'platform') }}
                            </a>
                        </li>
                    </ul>
                </div>
            {% endif %}
            <h2 class="slrn-content-main-title">
				{{ 'my_profile'|trans({}, 'platform') }}
            </h2>
        </div>
        <div class="panel-body">
            <div class="row slrn-profile-details">
                <aside class="profile_aside slrn-profile-aside pull-left" role="complementary">
                    <div class="avatar slrn-profile-avatar">
                        {% if user.getPicture() != "" %}
                            <img src="{{ image( 'uploads/pictures/' ~  user.getPicture() ).zoomCrop(150,150) }}" class="profile_picture" alt="{{ user.getLastName() ~ ' ' ~ user.getFirstName() }}">
                        {% else %}
                            <img src="{{ image( 'bundles/clarolinecore/images/avatar.jpg' ).zoomCrop(150,150) }}" class="profile_picture" alt="{{ user.getLastName() ~ ' ' ~ user.getFirstName() }}">
                        {% endif %}
                    </div>
                </aside>
                <div class="profile_informations slrn-profile_informations pull-left">
					<ul class="slrn-profile-details-list">
                        <li>{{'First name' | trans({}, 'platform') }}: <span class="slrn-bold">{{ user.getFirstName() }}</span></li>
                    	<li> {{'Last name' | trans({}, 'platform') }}: <span class="slrn-bold">{{ user.getLastName() }}</span></li>
                    	<li> {{'user_form_username' | trans({}, 'platform') }}: <span class="slrn-bold">{{ user.username() }}</span></li>
                	</ul>
					 <div class="informations">
						 {% if '' != user.getDescription() %}
                        <div class="description_block">
                            <div class="description">
                                {{ user.getDescription() |raw }}
                            </div>
                        </div>
                    {% endif %}
                        <p class="text-muted">
                            {{ 'registered'|trans({}, 'platform') }} {{ user.getCreationDate()| timeAgo }}
                        </p>
                    </div>
                    {% if user.getId() != app.user.getId() %}
                        <p>
                            <a class="btn btn-default" href="{{path('claro_mail_form', {'userId':user.getId()})}}"><i class="icon-comment"></i> {{ 'send_mail'|trans({}, 'platform') }}</a>
                            <a class="btn btn-default" href="{{path('claro_message_show', {'message': 0})}}?ids[]={{ user.getId() }}"><i class="icon-envelope"></i> {{ 'send_message'|trans({}, 'platform') }}</a>
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
        </div>
    </div>
{% endblock %}
