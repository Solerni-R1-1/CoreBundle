{% extends 'ClarolineCoreBundle:Administration:layout.html.twig' %}

{% block content -%}
    <h1>{{ 'mooc_accessconstraints_edit'|trans({}, 'platform') }}</h1>
        {{ form_start(edit_form) }}
            {{ form_errors(edit_form) }}
            {{ form_widget(edit_form._token) }}
            {{ form(edit_form) }}
    
            <a class="btn btn-primary js-submit-button" href="#">{{ 'validate'|trans({}, 'platform') }}</a>
            <a class="btn btn-gris" href="{{ path('admin_parameters_mooc_accessconstraints') }}">{{ 'cancel'|trans({}, 'platform') }}</a>

{% endblock %}
{% block javascripts %}
    {{ parent() }} 
    <script>
        $('.js-submit-button').on('click', function(event) {
            event.preventDefault();
            $('#claroline_corebundle_mooc_accessconstraints_save').trigger('click');
        })
    </script>
    
{% endblock %}