{% extends 'ClarolineCoreBundle:Message:layout.html.twig' %}

{% block title %}{% spaceless %}
    {% if ancestors | length >= 1 %}
        {{ parent() ~ ' - ' ~ ancestors[0].getObject() | striptags | raw }}
    {% else %}
        {{ 'new_message' | trans({}, 'platform') | striptags | raw }}
    {% endif %}
{% endspaceless %}{% endblock %}

{% block section_content %}
    <div class="row">
        <div class="col-md-6">
            {% for ancestor in ancestors %}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class='panel-title'>{#{{ ancestor.getId() }}#} {{ ancestor.getObject() | raw }}</h3>
                    </div>
                    <div class="panel-body">
                        <p class="text-muted">
                            {{ 'from_message'|trans({}, 'platform') }}:  {% if ancestor.getSender() is defined and ancestor.getSender() %}<a href="{{ path('claro_public_profile_view', {'publicUrl': ancestor.getSender().getPublicUrl()}) }}">{{ ancestor.getSenderUsername() }}</a>{% else %}{{ ancestor.getSenderUsername() }}{% endif %}
                        </p>
                        {% set second = false %}
                        <p class="text-muted">
                            {{ 'to_message'|trans({}, 'platform') }}: 
                            {% for dest in ancestor.getUserMessages() %} 
                                {% if second %} - {% endif %}
                                <a href="{{ path('claro_public_profile_view', {'publicUrl': dest.getUser().getPublicUrl()}) }}">{{ dest.getUser().getUserName() }}</a>
                                {% set second = true %}
                            {% endfor %}
                        </p>
                        <div>
                            {% if ancestor.getSender() and ancestor.getSender().getPicture() != "" %}
                                <img src="{{ image( 'thumbnails/tmb_54_54_' ~ ancestor.getSender().getPicture() ).scaleResize(54)}}" class="col-md-2" alt="{{ ancestor.getObject() }}">
                            {% endif %}
                        </div>
                        <p>
                            {{ ancestor.getContent()|raw }}
                            <p class="text-muted">
                                {{ ancestor.getDate()|timeAgo }}
                            </p>
                        </p>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="col-md-{% if ancestors is empty %}12{% else %}6{% endif %}">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="">
                        {{ 'new_message'|trans({}, 'platform') }}
                    </h3>
                </div>
                <form role="form" novalidate="novalidate"
                    {% if message is empty %}
                        action="{{ path('claro_message_send', {'parentId': null}) }}"
                    {% else %}
                        action="{{ path('claro_message_send', {'parentId': message.getId()}) }}"
                    {% endif %}
                    method="post" {{ form_enctype(form) }}
                    id="generic-form"
                    class="form-horizontal">
                    <div class="panel-body">
                        {{ form_widget(form) }}
                        {{ form_rest(form) }}
                    </div>
                    <div class="panel-footer">
                        {% if message is empty %}
                            <button id="submit-button" type="submit" class="btn btn-primary">{{ 'send'|trans({}, 'platform') }}</button>
                        {% else %}
                            <button id="submit-button" type="submit" class="btn btn-primary">{{ 'send'|trans({}, 'platform') }}</button>
                        {% endif %}
                        <a href="{{ path('claro_message_list_received')}}" id="link_new_message_layout" class='btn btn-gris action-button'>
                             {{ 'cancel'|trans({}, 'platform') }}
                    </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div id="contacts-box" class="modal fade" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3>{{ 'select_contacts_title'|trans({}, 'platform') }}</h3>
                </div>
                <div class="modal-body">
                    <ul class="flat_block">
                        <li class="active" id="users-nav-tab">
                            <a href="#">
                                {{ 'users'|trans({}, 'platform') }}
                            </a>
                        </li>
                        <li id="groups-nav-tab">
                            <a href="#">
                                {{ 'groups'|trans({}, 'platform') }}
                            </a>
                        </li>
                        <li id="workspaces-nav-tab">
                            <a href="#">
                                {{ 'claroline_corebundle_moocs'|trans({}, 'platform') }}
                            </a>
                        </li>
                    </ul>
                    <br>
                    <div id="contacts-list"></div>
                </div>
                <div class="modal-footer">
                    <input type="button" id="add-contacts-confirm-ok" class="btn btn-primary" value="{{ 'add_destinataires'|trans({}, 'platform') }}" disabled="disabled" />
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="{{ 'cancel'|trans({}, 'platform') }}"/>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src='{{ asset('bundles/clarolinecore/js/message/show.js') }}' type="text/javascript"></script>
    <script type="text/javascript" src="{{ asset('bundles/clarolinecore/js/form-validator/jquery.form-validator.js') }}"></script>
    <!--[if IE 9 ]>
        <script src="{{ asset('bundles/clarolinecore/js/jquery.placeholder.js') }}"></script>
        <script src="{{ asset('bundles/clarolinecore/js/placeholder-init.js') }}"></script>
    <![endif]-->
    <script type="text/javascript" src="{{ asset('bundles/clarolinecore/js/form-validator-init.js') }}"></script>

{% endblock %}