{% macro renderPager(search, pager) %}
    {% if search == '' %}
    {{
        pagerfanta(
            pager,
            'twitter_bootstrap',
            {
                'proximity' : 1,
                'routeName': 'claro_message_list_received'
            }
        )
    }}
    {% else %}
        {{
            pagerfanta(
                pager,
                'twitter_bootstrap_translated',
                {
                    'proximity' : 1,
                    'routeName': 'claro_message_list_received_search',
                    'routeParams': {'search': search}
                }
            )
        }}
    {% endif %}
{% endmacro %}

{% macro displayControls() %}
    {% if app.user %}
        <button class="action-button btn-tools btn-tools-trash"
                data-action="remove"
                data-toggle="tooltip"
                data-placement="left"
                data-original-title="{{'delete'|trans({}, 'platforum')}}">
        </button>
    {% endif %}
{% endmacro %}

{% from _self import renderPager %}
{% from _self import displayControls %}

{% extends 'ClarolineCoreBundle:Message:layout.html.twig' %}

{% block title %}{{ 'messages_received' | trans({}, 'platform') | striptags | raw }}{% endblock %}

{% block section_content %}

    <div class="search-bar row margin-bottom-md">
        <div class='col-xs-12 col-md-12'>
            {{ displayControls() }}
        </div>
    </div>

    {#<div>
    {% if pager.getNbPages() > 1 %}
        {{ renderPager(search, pager) }}
    {% endif %}
    </div>#}
    <div class="table-responsive">
        <table class="table table-condensed table-solerni" id="messages-table">
            <thead>
                <tr>
                    <th style='width:4%;'><input type="checkbox" name="all" id="check-all-items"></input></th>
                    <th style='width:20%;'>{{ 'from_message'|trans({}, 'platform') }}</th>
                    <th style='width:60%;'>{{ 'object'|trans({}, 'platform') }}</th>
                    <th style='width:16%;'>{{ 'date'|trans({}, 'platform') }}</th>
          {#          <th style='width:3%;'></th>
                    <th style='width:3%;'></th>#}
                </tr>
            </thead>
            <tbody id="message-table-body">
                {% if pager|length > 0 %}
                    {% for userMessage in pager.currentPageResults %}
                        <tr
                            class=
                            "row-user-message
                            {% if not userMessage.isRead() %} unread {% endif %}
                            {% if userMessage.isRead() %} active {% endif %}
                            pointer-hand"
                            href="{{ path('claro_message_show', {'message': userMessage.getMessage().getId()}) }}"
                        >
                            <td><input class="chk-item" value="{{ userMessage.getId() }}" type="checkbox"></input></td>
                            <td> {{ userMessage.getMessage().getSenderUsername() }} </td>
                            <td> {{ userMessage.getMessage().getObject() | truncate(80, false, ' [...]') }} </td>
                            <td> {{ userMessage.getMessage().getDate()|intl_date_format }} </td>
                {#            <td> {{ userMessage.getMessage().getId() }} </td>
                            <td> {{ userMessage.getMessage().getRoot().getId() }} </td>#}
                         {#   <td>
                                {% if userMessage.isRead() %}
                                    <div style="color: green" class="icon-ok-sign"></div>
                                {% else %}
                                    <a href="{{ path('claro_message_mark_as_read', {'message': userMessage.getMessage().getId()}) }}" class="mark-as-read"><i class="icon-envelope"></i></a>
                                {% endif %}
                            </td>#}
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td class="text-center" colspan="5">
                            {{ 'no_message'|trans({}, 'platform') }}
                        </td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    {% if pager.getNbPages() > 1 %}
        {{ renderPager(search, pager) }}
    {% endif %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src='{{ asset('bundles/clarolinecore/js/table.js') }}' type="text/javascript"></script>
    <script src='{{ asset('bundles/clarolinecore/js/message/listReceived.js') }}' type="text/javascript"></script>
    <script>
        parameters = {};
        parameters.route = {};
        parameters.route.action = {};
        parameters.route.normal = {"route": "claro_message_list_received", "parameters": {}};
        parameters.route.search = {"route": "claro_message_list_received_search", "parameters": {}};
        parameters.route.action.remove = {"route": "claro_message_soft_delete", "parameters": {}, "confirmTemplate": removeMessageConfirm, "delete": true};
        Claroline.Table.initialize(parameters);

        $('tr.pointer-hand').on('click', function(event) {
            var targetClass = event.target.className;
            if (targetClass !== 'chk-item' && targetClass !== 'icon-envelope') {
                window.document.location = $(this).attr("href");
            }
        });

        $('.mark-as-read').on('click', function (e) {
            e.preventDefault();
            $.ajax({
                type: 'GET',
                url: $(e.currentTarget).attr('href'),
                success: function () {
                    $(e.target).css('color', 'green');
                    $(e.target).attr('class', 'icon-ok-sign');
                    var row = $(e.target)[0].parentElement.parentElement.parentElement;
                    $(row).addClass('active');
                }
            });
        });

        $('.chk-item').on('click', function (e) {

            if ( $( this )[0].checked) {
                $( this ).parent().parent().addClass('selected');
                $( '.btn-tools' ).show();

                needCheckAll = true;
                $('.chk-item').each(function( index ) {
                    if(!$( this )[0].checked){
                      needCheckAll = false;
                    }
                  });

                if (needCheckAll) {

                    $('#check-all-items').prop('checked', true);
                }

            } else {
                $( this ).parent().parent().removeClass('selected');

                needHide = true;
                $('.chk-item').each(function( index ) {
                  if($( this )[0].checked){
                    needHide = false;
                  }
                });

                if(needHide){
                    $( '.btn-tools' ).hide();
                }
                $('#check-all-items').prop('checked', false);

            }
        });

        $('#check-all-items').click(function () {
            if ($('#check-all-items').is(':checked')) {
                $('.chk-item').prop('checked', true);
                $('.chk-item').parent().parent().addClass('selected');
                $( '.btn-tools' ).show();
            }
            else {
                $('.chk-item').prop('checked', false);
                $('.chk-item').parent().parent().removeClass('selected');
                $( '.btn-tools' ).hide();
            }
        });

        $('#check-all-items').prop('checked', false);
        $('.chk-item').prop('checked', false);
    </script>
{% endblock %}
