{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}

{% block title %}{{ parent() ~ ' - ' ~ "home" | trans({}, "platform") | striptags | raw }}{% endblock %}
{# WE DONT USE BREADCRUMBS
{% block breadcrumb %}
    {{
        macros.workspaceBreadcrumbs(
            workspace,
            [
                {
                    'name': 'home'|trans({}, 'tools'),
                    'href': ''
                }
            ]
        )
    }}
{% endblock %}
