{% extends 'ClarolineCoreBundle:Tool\\workspace\\analytics:layout.html.twig' %}

{% block title %}{{ parent() ~ ' - ' ~ "analytics" | trans({}, "platform") }}{% endblock %}

{% block breadcrumb %}
    {{
    macros.workspaceBreadcrumbs(
    workspace,
    [
    {
    'name': 'analytics'|trans({}, 'platform'),
    'href': ''
    }
    ]
    )
    }}
{% endblock %}

{% block analytic_content %}
    <div class="slrn-statistic-wrapper">
        <hr class="slrn-hr" />
        <legend>{{ 'mooc_analytics_exports' | trans({}, 'platform') }}</legend>
        {% if exports is defined and exports is not empty %}
        <table class="slrn-analytics-table slrn-analytics-table--2cols slrn-analytics-table--exports">
            {% for route, libelle in exports %}
                <tr class="slrn-analytics-table__tr">
                    <td class="slrn-analytics-table__td">
                        <a class="" href="{{ path(route, { 'workspace':workspace.getId(), 'nbDays':5 }) }}">
                            <i class="icon-download"></i>
                        </a>
                    </td>
                    <td class="slrn-analytics-table__td slrn-bold">
                        <a class="" href="{{ path(route, { 'workspace':workspace.getId(), 'nbDays':5 }) }}">
                            {{ libelle|trans({}, 'platform') }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>
       {% endif %}
    </div>
