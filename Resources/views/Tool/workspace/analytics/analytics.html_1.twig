{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}

{% block title %}{{ parent() ~ ' - ' ~ "analytics" | trans({}, "platform") }}{% endblock %}

{% block breadcrumb %}
    {{
    macros.workspaceBreadcrumbs(
    workspace,
    [
    {
    'name': 'analytics'|trans({}, 'platform'),
    'href': ''
    }
    ]
    )
    }}
{% endblock %}

{% block section_content %}

    <div class="panel-heading">
        <h2 class="panel-title">{{ 'mooc_analytics'|trans({}, 'platform') }} : {{ workspace.getMooc().getTitle() }}</h2>
    </div>
    <div class="panel-body" id="workspace-list-div">
        {% include 'ClarolineCoreBundle:Tool\\workspace\\analytics:analytics_navbar.html.twig'%}

        <div class="">
            <div class="panel panel-default">
                <div id="analytics-barchart" class="panel-body">
                    <div id="container-barchart">
                        <div id="activity-bar-chart" class="bar-chart"></div>
                    </div>
                </div>
            </div>

            {#<div class="panel panel-default">
                <div class="panel-heading">
                    <i class="icon-user"></i>
                    {{'account_general_statistics'|trans({}, 'platform')}}
                </div>
                <div id="analytics-userstats" class="panel-body">
                    <div id="container-userstats" class="row">
                        <div class="col-md-2">
                            <span class="user-count-number">{{ usersCount['user_accounts'] }}</span><br/>
                            <span class="user-count-label">{{ 'user_accounts'|trans({}, 'platform') }}</span>
                        </div>
                        {% for key, value in usersCount|reverse %}
                            {% if(key != 'user_accounts') %}
                            <div class="col-md-2">
                                <span class="user-count-number">{{ value }}</span><br/>
                                <span class="user-count-label">{{ key|trans({}, 'platform') }}</span>
                            </div>
                            {% endif %}
                        {% endfor %}
                        <div class="col-md-4">
                            <div id="users-pie-chart"></div>
                        </div>
                    </div>
                </div>
            </div>

            <h3>
                {{'yesterday_activity'|trans({}, 'platform')}}
            </h3>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="icon-book"></i>
                    {{'ws_most_viewed'|trans({}, 'platform')}}
                </div>
                <div class="table-responsive">
                    <table class="table table-condensed table-hovered">
                        <tr><th>#</th><th>{{'name'|trans({}, 'platform')}}</th><th>{{'connections'|trans({}, 'platform')}}</th></tr>
                        {% for ws in mostViewedWS %}
                        <tr class="{{ cycle(['odd', 'even'], loop.index) }}"><td>{{loop.index}}</td><td>{{ws.name}} ({{ws.code}})</td><td>{{ws.actions}}</td></tr>
                        {% endfor %}
                        <tr><td colspan="3" class="text-right"><a href="{{ path('claro_admin_analytics_top', { 'topType': 'top_workspaces_connections' }) }}">{{'see_more'|trans({}, 'platform')}}...</a></td></tr>
                    </table>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="icon-file"></i>
                    {{'media_most_viewed'|trans({}, 'platform')}}
                </div>
                <div class="table-responsive">
                    <table class="table table-condensed table-hovered">
                        <tr><th>#</th><th>{{'name'|trans({}, 'platform')}}</th><th>{{'views'|trans({}, 'platform')}}</th></tr>
                        {% for media in mostViewedMedia %}
                            <tr class="{{ cycle(['odd', 'even'], loop.index) }}"><td>{{loop.index}}</td><td>{{media.name}}</td><td>{{media.actions}}</td></tr>
                        {% endfor %}
                        <tr><td colspan="3" class="text-right"><a href="{{ path('claro_admin_analytics_top', { 'topType': 'top_media_views' }) }}">{{'see_more'|trans({}, 'platform')}}...</a></td></tr>
                    </table>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="icon-download"></i>
                    {{'resources_most_downloaded'|trans({}, 'platform')}}
                </div>
                <div class="table-responsive">
                    <table class="table table-condensed table-hovered">
                        <tr><th>#</th><th>{{'name'|trans({}, 'platform')}}</th><th>{{'downloads'|trans({}, 'platform')}}</th></tr>
                        {% for resource in mostDownloadedResources %}
                        <tr class="{{ cycle(['odd', 'even'], loop.index) }}"><td>{{loop.index}}</td><td>{{resource.name}}</td><td>{{resource.actions}}</td></tr>
                        {% endfor %}
                        <tr><td colspan="3" class="text-right"><a href="{{ path('claro_admin_analytics_top', { 'topType': 'top_resources_downloads' }) }}">{{'see_more'|trans({}, 'platform')}}...</a></td></tr>
                    </table>
                </div>
            </div>
            #}
        </div>
    </div>
    <div class="panel-body logs-container">
        {% if 0 < chartData|length %}
            {% include 'ClarolineCoreBundle:Log:count_by_day_chart.html.twig' with {'actionName' : 'entries_per_day'} %}
        {% endif %}

        {#% if 0 < resourceCount|length %#}
            <div class="row">
                <div class="col-md-6">
                    {% include 'ClarolineCoreBundle:Log:resource_by_type_chart.html.twig' with {'filesImported' : true, 'resourceCount' : resourceCount, 'chartHeight' : 400, 'numberRows' : 4} %}
                </div>
                <div class="col-md-6">
                    <div id="analytics-resources-list" class="panel panel-default">
                        <div class="panel-heading">
                            <i class="icon-list"></i>
                            {{'resources_usage_list'|trans({}, 'platform')}}
                        </div>
                        <div class="table-responsive">
                            <table class="table table-condensed">
                                <tr><th>{{'resource'|trans({}, 'platform')}}</th><th>#</th></tr>
                                {% for resource in resourceCount %}
                                    <tr><td>{{resource.name|trans({}, 'resource')}}</td><td>{{resource.total}}</td></tr>
                                {% endfor %}
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        {#% endif %#}
        	<a href="{{ path('solerni_export_badges_knowledge_stats', {'workspace':workspace.getId()}) }}">EXPORT BADGES KNOWLEDGE</a><br />
        	<a href="{{ path('solerni_export_badges_skill_stats', {'workspace':workspace.getId()}) }}">EXPORT BADGES SKILL</a><br />
        	<a href="{{ path('solerni_export_subscriptions_stats', {'workspace':workspace.getId(), 'from':'2012-08-01', 'to':'2014-12-12'}) }}">EXPORT SUBSCRIPTIONS STATS</a><br />
        	<a href="{{ path('solerni_export_active_users_stats', {'workspace':workspace.getId(), 'nbDays':5}) }}">EXPORT ACTIVE USERS / CONNECTION STATS</a><br />
        	<a href="{{ path('solerni_export_forum_stats', {'workspace':workspace.getId(), 'from':'2012-08-01', 'to':'2014-12-12'}) }}">EXPORT FORUM STATS</a><br />
        	
    </div>
{% endblock %}
