{% extends 'ClarolineCoreBundle:Exception:layout.html.twig' %}

{% block title %}{{ parent() ~ ' - ' ~ 'unauthorized' | trans({}, 'platform') | striptags | raw }}{% endblock %}

{% block content %}
    {#{'unauthorized' | trans({}, 'platform') }#}
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <p><b>{{'sorry'|trans({}, 'platform')}},</b></p>
            {% if custom_message|default %}
                <p>{{ custom_message|raw }}</p>
            {% else %}
                <p>{{'forbidden_url'|trans({}, 'platform')}}</p>
            {% endif %}
            <p>{{ 'get_back_message'|trans({'back_url': path('claro_desktop_open'), 'catalog_url' :path( 'solerni_catalogue', {}) ~ '#?page=1&rpp=10&fs=type__claroline_core_mooc_moocsession&ss=ispub__true&afs=status,mcat,owner,duration,ispub&sb=false' }, 'platform')|raw }}</p>
        </div>
    </div>
{% endblock %}
